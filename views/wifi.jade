doctype html
html
    head
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title= title
        link(rel='stylesheet', href='/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/wifi.css')
        script(src='/js/jquery-3.1.1.min.js', type='text/javascript')
        script.
            var wifi_form = $('#wifi-form');
            wifi_form.submit(function(env){
                $.ajax({
                    type:wifi_form.attr('method'),
                    url:wifi_form.attr('action'),
                    data:wifi_form.serialize(),
                    success:function(data){
                        console.log(data);
                    }
                })
                env.preventDefault();
            })

    body
        block content
            .container
                .wrapper
                    form.form-signin(id="wifi-form",action="/wifi" method="post")
                        h2.form-signin-heading WIFI Detailes
                        input.form-control(type="text", name="user_ssid", placeholder="wifi name ")
                        input.form-control(type="password", name="user_wifipass", placeholder="wifi password")
                        .checkbox
                            label
                                input(type='checkbox', value='false',name="disable_wifi")
                                |  Disable Wifi
                        button.btn.btn-large.btn-primary(type="submit") SUBMIT